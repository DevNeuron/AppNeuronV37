<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".HomeUsuario">

    <Button
        android:id="@+id/bCita"
        android:layout_width="290sp"
        android:layout_height="50sp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="57dp"
        android:background="@drawable/boton_blanco"
        android:hint="@string/Pedir_cita"
        android:onClick="PedirCita"
        android:textColor="@color/white"
        android:textColorHint="#FBF9F9"
        app:layout_constraintBottom_toTopOf="@+id/bConsulta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/bConsulta"
        android:layout_width="290sp"
        android:layout_height="50sp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="183dp"
        android:background="@drawable/boton_blanco"
        android:hint="@string/Consultar_citas"
        android:onClick="ConsultarCita"
        android:textColor="@color/white"
        android:textColorHint="#FFFDFD"
        app:layout_constraintBottom_toTopOf="@+id/imageView10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="300sp"
        android:layout_height="60sp"
        android:layout_marginTop="65dp"
        android:hint="@string/TextView"
        android:textAlignment="center"
        android:textColorHint="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="125dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/pedir_cita" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="57dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/pedir_cita" />

    <ImageView
        android:id="@+id/ibFace"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="137dp"
        android:layout_marginEnd="365dp"
        android:layout_marginBottom="29dp"
        app:layout_constraintBottom_toTopOf="@+id/ibInsta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/icono_facebook" />

    <ImageView
        android:id="@+id/ibInsta"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="21dp"
        app:layout_constraintBottom_toTopOf="@+id/ibTwit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibFace"
        app:srcCompat="@drawable/icono_instagram" />

    <ImageView
        android:id="@+id/ibTwit"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="47dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ibInsta"
        app:srcCompat="@drawable/icono_twitter" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="183dp"
        android:layout_marginEnd="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bConsulta"
        app:srcCompat="@drawable/logowhite" />

</androidx.constraintlayout.widget.ConstraintLayout>